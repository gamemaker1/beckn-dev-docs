{
	"include": ["src/"],
	"compilerOptions": {
		"target": "esnext",
		"module": "commonjs",
		"lib": ["dom", "es2017"],
		"jsx": "react",
		"baseUrl": ".",
		"paths": { "*": ["types/*"] },
		"strict": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"noEmit": true,
		"skipLibCheck": true
	}
}
