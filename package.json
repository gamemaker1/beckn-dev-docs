{
	"name": "@beckn/docs",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"scripts": {
		"start": "astro --config config/astro.ts dev",
		"build": "astro --config config/astro.ts build",
		"preview": "astro --config config/astro.ts preview",
		"lint": "prettier --check --ignore-path .gitignore .",
		"format": "prettier --write --ignore-path .gitignore ."
	},
	"dependencies": {
		"preact": "10.7.1"
	},
	"devDependencies": {
		"@astrojs/preact": "0.1.2",
		"astro": "1.0.0-beta.20",
		"lint-staged": "12.4.1",
		"npm-run-all": "4.1.5",
		"prettier": "2.6.2",
		"prettier-plugin-astro": "0.0.12",
		"typescript": "4.6.4",
		"xo": "0.48.0"
	},
	"xo": {
		"prettier": true,
		"rules": {
			"@typescript-eslint/no-empty-function": 0,
			"@typescript-eslint/no-confusing-void-expression": 0,
			"@typescript-eslint/consistent-indexed-object-style": [
				"error",
				"index-signature"
			]
		}
	},
	"prettier": {
		"semi": false,
		"useTabs": true,
		"singleQuote": true,
		"bracketSpacing": true,
		"proseWrap": "always",
		"endOfLine": "lf"
	},
	"lint-staged": {
		"{.,**}/*.{yaml,json,md}": "prettier --write"
	}
}
